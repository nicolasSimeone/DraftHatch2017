<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarNuevoHatch"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MainActivity"
        android:background="#ffffffff"
        >


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Activismo"
            android:id="@+id/txtActivismo"
            android:layout_alignTop="@+id/txtMascotas"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Mascotas"
            android:id="@+id/txtMascotas"

            android:layout_below="@+id/imgMascotas"
            android:layout_alignRight="@+id/imgSalidas"
            android:layout_alignEnd="@+id/imgSalidas" />


        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select a Category"
            android:gravity="center"
            android:textColor="#c5c5c5"
            android:layout_below="@+id/imageViewStep4"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="21dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgDeporte"
            android:src="@drawable/deportes_icon_small"
            android:background="@drawable/rounded"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_below="@+id/editText"
            android:layout_alignLeft="@+id/txtDeportes"
            android:layout_alignStart="@+id/txtDeportes"
            android:layout_marginTop="38dp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgSalidas"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:src="@drawable/salidas_icon_small"
            android:background="@drawable/rounded"
            android:layout_alignTop="@+id/imgDeporte"
            android:layout_alignRight="@+id/txtSalidas"
            android:layout_alignEnd="@+id/txtSalidas" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgMascotas"
            android:src="@drawable/mascotas_icon_small"
            android:background="@drawable/rounded"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_marginTop="27dp"
            android:layout_below="@+id/txtFlash"
            android:layout_alignRight="@+id/txtMascotas"
            android:layout_alignEnd="@+id/txtMascotas" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgActivismo"
            android:src="@drawable/activismo_icon_small"
            android:background="@drawable/rounded"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_above="@+id/txtActivismo"
            android:layout_alignLeft="@+id/txtActivismo"
            android:layout_alignStart="@+id/txtActivismo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salidas"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txtSalidas"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/imgMascotas"
            android:layout_below="@+id/imgSalidas" />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deportes"
                android:textAppearance="?android:attr/textAppearanceSmall"

                android:id="@+id/txtDeportes"
            android:layout_below="@+id/imgDeporte"
            android:layout_alignLeft="@+id/imgActivismo"
            android:layout_alignStart="@+id/imgActivismo" />

        <ImageView
            android:layout_width="130dp"
            android:layout_height="32dp"
            android:id="@+id/imageViewStep4"
            android:src="@drawable/workflow_create_2"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flash"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txtFlash"
            android:layout_below="@+id/imgFlash"
            android:layout_alignLeft="@+id/imgFlash"
            android:layout_alignStart="@+id/imgFlash"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="MÃºsica"
            android:id="@+id/txtMusica"
            android:layout_alignBaseline="@+id/txtMascotas"
            android:layout_alignBottom="@+id/txtMascotas"
            android:layout_alignLeft="@+id/txtFlash"
            android:layout_alignStart="@+id/txtFlash" />

        <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imgFlash"
                    android:src="@drawable/flash_icon_small"
                    android:background="@drawable/rounded"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
            android:layout_alignTop="@+id/imgSalidas"
            android:layout_toRightOf="@+id/imageViewStep4"
            android:layout_toEndOf="@+id/imageViewStep4"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp" />

        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
            android:id="@+id/imgMusica"
            android:src="@drawable/musica_icon_small"
            android:background="@drawable/rounded"
                android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:layout_above="@+id/txtMusica"
            android:layout_alignLeft="@+id/imgFlash"
            android:layout_alignStart="@+id/imgFlash" />


    </RelativeLayout>

    <android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_nuevo_hatch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <!-- The first child in the layout is for the main Activity UI-->

    </android.support.v4.widget.DrawerLayout>
</LinearLayout>