<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarNuevoHatch"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MainActivity"
        android:background="#ffffffff"
        >

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imgDeporte"
                android:src="@drawable/ic_deportes"
                android:background="@drawable/rounded"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_alignTop="@+id/imgSalidas"
                android:layout_alignLeft="@+id/txtDeportes"
                android:layout_alignStart="@+id/txtDeportes" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deportes"
                android:textAppearance="?android:attr/textAppearanceSmall"

                android:id="@+id/txtDeportes"
                android:layout_below="@+id/imgDeporte"
                android:layout_alignRight="@+id/txtActivismo"
                android:layout_alignEnd="@+id/txtActivismo" />

            <ImageButton
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imgMusica"
            android:src="@drawable/ic_musica"
            android:background="@drawable/rounded"
                android:scaleType="fitXY"
            android:adjustViewBounds="true"
                android:layout_above="@+id/txtMusica"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/imgMascotas"
                android:src="@drawable/ic_mascotas"
                android:background="@drawable/rounded"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_marginTop="58dp"
                android:layout_below="@+id/txtSalidas"
                android:layout_centerHorizontal="true" />



                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/imgActivismo"
                    android:src="@drawable/ic_activismo"
                    android:background="@drawable/rounded"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:layout_alignTop="@+id/imgMascotas"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/imgFlash"
                    android:src="@drawable/ic_flash"
                    android:background="@drawable/rounded"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:layout_above="@+id/txtFlash"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Salidas"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txtSalidas"
            android:layout_alignTop="@+id/txtDeportes"
            android:layout_centerHorizontal="true" />

                <ImageButton
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/imgSalidas"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_salidas"
                    android:background="@drawable/rounded"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Flash"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txtFlash"
            android:layout_below="@+id/imgSalidas"
            android:layout_alignRight="@+id/txtMusica"
            android:layout_alignEnd="@+id/txtMusica" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Activismo"
            android:id="@+id/txtActivismo"
            android:layout_below="@+id/imgActivismo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Mascotas"
            android:id="@+id/txtMascotas"

            android:layout_below="@+id/imgMascotas"
            android:layout_alignRight="@+id/txtSalidas"
            android:layout_alignEnd="@+id/txtSalidas" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="MÃºsica"
            android:id="@+id/txtMusica"
            android:layout_below="@+id/imgMascotas"
            android:layout_alignLeft="@+id/imgMusica"
            android:layout_alignStart="@+id/imgMusica" />


    </RelativeLayout>

    <android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_nuevo_hatch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <!-- The first child in the layout is for the main Activity UI-->

    </android.support.v4.widget.DrawerLayout>
</LinearLayout>