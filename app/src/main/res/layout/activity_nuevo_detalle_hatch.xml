<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarNuevoHatch"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>

    <!-- The first child in the layout is for the main Activity UI-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MainActivity"
        android:background="#ffffffff"
        android:clickable="false"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <View
            android:layout_width="75dp"
            android:layout_height="0dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/view"
            android:layout_below="@+id/txtCategory"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <ImageView
            android:layout_width="130dp"
            android:id="@+id/imageViewIcon"
            android:layout_marginTop="14dp"
            android:layout_below="@+id/imageView7"
            android:layout_centerHorizontal="true"
            android:layout_height="60dp" />

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:id="@+id/view9"
            android:layout_below="@+id/view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:id="@+id/view3"
            android:layout_above="@+id/btnConfirmar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="18dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Maximo Participantes"
            android:id="@+id/Participantes"
            android:layout_above="@+id/view3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="14sp"
            android:textColor="@color/cardview_shadow_start_color"
            android:layout_alignLeft="@+id/textFechaEnd"
            android:layout_alignStart="@+id/textFechaEnd"
            android:gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tipo"
            android:id="@+id/textFechaEnd"
            android:layout_above="@+id/Participantes"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="14sp"
            android:textColor="@color/cardview_shadow_start_color"
            android:layout_alignLeft="@+id/txtFecha"
            android:layout_alignStart="@+id/txtFecha"
            android:gravity="left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Fecha"
            android:id="@+id/txtFecha"
            android:layout_above="@+id/textFechaEnd"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="14sp"
            android:textColor="@color/cardview_shadow_start_color"
            android:layout_alignLeft="@+id/txtDireccion"
            android:layout_alignStart="@+id/txtDireccion"
            android:gravity="left" />

        <TextView
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/txtCategory"
            android:textColor="@color/cardview_shadow_start_color"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageViewIcon"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textSize="14sp" />

        <TextView
            android:layout_width="400px"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Titulo"
            android:id="@+id/textUsername"
            android:textColor="@color/cardview_shadow_start_color"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_below="@+id/view9"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:id="@+id/view10"
            android:layout_below="@+id/textUsername"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalle"
            android:id="@+id/txtDetalle"

            android:textAppearance="?android:attr/textAppearanceMedium"
            android:gravity="top|center"
            android:textColor="@color/cardview_shadow_start_color"
            android:layout_below="@+id/view10"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_above="@+id/textDireccion" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Distancia"
            android:id="@+id/txtDireccion"
            android:textSize="14sp"
            android:textColor="@color/cardview_shadow_start_color"
            android:layout_above="@+id/txtFecha"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignLeft="@+id/imageViewIcon"
            android:layout_alignStart="@+id/imageViewIcon"
            android:gravity="left" />

        <TextView
            android:text="Direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/txtDireccion"
            android:id="@+id/textDireccion"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/cardview_shadow_start_color"
            android:layout_alignLeft="@+id/txtDireccion"
            android:layout_alignStart="@+id/txtDireccion"
            android:gravity="left" />

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:id="@+id/view8"
            android:layout_alignTop="@+id/textDireccion"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UNIRSE"
            android:id="@+id/btnConfirmar"
            android:background="@color/com_facebook_messenger_blue"
            android:textColor="#ffffffff"
            android:layout_marginRight="11dp"
            android:layout_marginEnd="11dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/imageViewIcon"
            android:layout_alignEnd="@+id/imageViewIcon" />

        <TextView
            android:text="Direccion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view8"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView4"
            android:layout_alignRight="@+id/textView13"
            android:layout_alignEnd="@+id/textView13" />

        <TextView
            android:text="Distancia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView4"
            android:id="@+id/textView13"
            android:layout_alignRight="@+id/textView15"
            android:layout_alignEnd="@+id/textView15"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtDireccion"
            android:layout_alignRight="@+id/textView13"
            android:layout_alignEnd="@+id/textView13"
            android:id="@+id/textView14"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Tipo de Evento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView14"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/textView15" />

        <TextView
            android:text="Participantes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView15"
            android:layout_alignRight="@+id/textView15"
            android:layout_alignEnd="@+id/textView15"
            android:id="@+id/textView16"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout_nuevo_hatch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">



    </android.support.v4.widget.DrawerLayout>
</LinearLayout>