<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarNuevoHatch"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"/>

    <!-- The first child in the layout is for the main Activity UI-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".MainActivity"
        android:background="#ffffffff"
        android:clickable="false">

        <View
            android:layout_width="75dp"
            android:layout_height="0dp"
            android:background="@android:color/darker_gray"
            android:id="@+id/view"
            android:layout_below="@+id/txtCategory"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <ImageView
            android:layout_width="130dp"
            android:layout_height="32dp"
            android:id="@+id/imageViewStep4"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:src="@drawable/step4" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Titulo"
            android:id="@+id/txtCategory"
            android:textColor="#0382f9"
            android:textStyle="bold"
            android:layout_marginTop="43dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detalle"
            android:id="@+id/txtDetalle"
            android:layout_alignLeft="@+id/txtCategory"
            android:layout_alignStart="@+id/txtCategory"

            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/view" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Direccion"
            android:id="@+id/txtDireccion"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/txtCategory"
            android:layout_toEndOf="@+id/txtCategory" />

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:id="@+id/view1"
            android:layout_alignLeft="@+id/txtDireccion"
            android:layout_alignStart="@+id/txtDireccion"
            android:layout_below="@+id/txtDireccion"
            android:layout_alignRight="@+id/txtDetalle"
            android:layout_alignEnd="@+id/txtDetalle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Categoria"
            android:id="@+id/txtCategoria"
            android:layout_above="@+id/imgDetalleFecha"
            android:layout_alignRight="@+id/txtDireccion"
            android:layout_alignEnd="@+id/txtDireccion" />

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:id="@+id/view2"
            android:layout_alignLeft="@+id/txtCategoria"
            android:layout_alignStart="@+id/txtCategoria"
            android:layout_below="@+id/txtCategoria"
            android:layout_alignRight="@+id/txtDetalle"
            android:layout_alignEnd="@+id/txtDetalle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Fecha"
            android:id="@+id/txtFecha"
            android:layout_above="@+id/imgDetalleTipo"
            android:layout_toRightOf="@+id/txtCategory"
            android:layout_toEndOf="@+id/txtCategory" />

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:id="@+id/view3"
            android:layout_alignLeft="@+id/txtFecha"
            android:layout_alignStart="@+id/txtFecha"
            android:layout_below="@+id/txtFecha"
            android:layout_alignRight="@+id/txtDetalle"
            android:layout_alignEnd="@+id/txtDetalle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Tipo"
            android:id="@+id/Participantes"
            android:layout_below="@+id/imgDetalleFecha"
            android:layout_toRightOf="@+id/txtCategory"
            android:layout_toEndOf="@+id/txtCategory" />

        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:id="@+id/view4"
            android:layout_alignLeft="@+id/Participantes"
            android:layout_alignStart="@+id/Participantes"
            android:layout_below="@+id/Participantes"
            android:layout_alignRight="@+id/txtDetalle"
            android:layout_alignEnd="@+id/txtDetalle" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirmar!"
            android:id="@+id/btnConfirmar"
            android:background="#0080ff"
            android:textColor="#ffffffff"
            android:layout_alignParentBottom="true"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgDetalleDireccion"
            android:src="@drawable/ic_hatches"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgDetalleDistancia"
            android:src="@drawable/ic_person_distancia"
            android:layout_below="@+id/view1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgDetalleFecha"
            android:src="@drawable/ic_watch"
            android:layout_below="@+id/imgDetalleDistancia"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgDetalleTipo"
            android:src="@drawable/ic_hatch_open"
            android:layout_below="@+id/imgDetalleFecha"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/imageViewShow"
            android:src="@drawable/imageuploadicon"
            android:layout_alignBottom="@+id/btnConfirmar"
            android:layout_alignRight="@+id/Participantes"
            android:layout_alignEnd="@+id/Participantes"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/btnConfirmar" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            android:background="#ea0f29"
            android:textColor="#ffffffff"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/txtFecha"
            android:layout_toEndOf="@+id/txtFecha" />
    </RelativeLayout>

    <android.support.v4.widget.DrawerLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/drawer_layout_nuevo_hatch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">



    </android.support.v4.widget.DrawerLayout>
</LinearLayout>